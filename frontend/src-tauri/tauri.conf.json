    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/SudarsanamR/Hall-Allocation/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY2NzNGNDNENDdGQTVBRDIKUldUU1d2cEhQZlJ6OWxUUjhpS3hvQ2NWSFQ2ZFB0UGR2NFlZRVQrRE5SVkkydU1xdmJoU1dTUnkK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "backend"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
